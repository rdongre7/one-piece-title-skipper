{
  "name": "Crunchyroll One Piece Title Card Skipper",
  "version": "1.0.0",
  "description": "Skip to title card and improve the One Piece experience.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "icon.png"
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.crunchyroll.com/*"
      ],
      "run_at": "document_end",
      "all_frames": true,
      "js": [
        "playback.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "manifest_version": 2
}